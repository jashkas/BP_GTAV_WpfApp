<Window x:Class="BP_GTAV_WpfApp.WithFriend_BP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BP_GTAV_WpfApp"
        mc:Ignorable="d"
        Title="WithFriend_BP" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="+" x:Name="plusClubButton" Click="PlusClubButton_Click"/>
        <TextBlock Grid.Row="0" Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" x:Name="countClubTextBlock"/>
        <TextBlock Grid.Row="0" Grid.Column="2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="клуб"/>
        <TextBlock Grid.Row="0" Grid.Column="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" x:Name="countClubFriendTextBlock"/>
        <Button Grid.Row="0" Grid.Column="4" Content="+Д" x:Name="plusClubFriendButton" Click="PlusClubFriendButton_Click"/>

        <CheckBox Grid.Row="1" Grid.Column="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="kartingCheckBox"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="картинг"/>
        <CheckBox Grid.Row="1" Grid.Column="4" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="kartingFriendCheckBox"/>

        <CheckBox Grid.Row="2" Grid.Column="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="streetRaceCheckBox"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="уличная гонка"/>
        <CheckBox Grid.Row="2" Grid.Column="4" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="streetRaceFriendCheckBox"/>

        <Button Grid.Row="3" Grid.Column="0" Content="+" x:Name="plusTrainingComplexButton" Click="PlusTrainingComplexButton_Click"/>
        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" x:Name="countTrainingComplexTextBlock"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="тренировочный комплекс"/>
        <TextBlock Grid.Row="3" Grid.Column="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" x:Name="countTrainingComplexFriendTextBlock"/>
        <Button Grid.Row="3" Grid.Column="4" Content="+Д" x:Name="plusTrainingComplexFriendButton" Click="PlusTrainingComplexButton_Click"/>

        <CheckBox Grid.Row="4" Grid.Column="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="arenaRaceCheckBox"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="арена"/>
        <CheckBox Grid.Row="4" Grid.Column="4" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="arenaFriendRaceCheckBox"/>
        
    </Grid>
</Window>
